{
    "schema_version": "1.1",

    "project": {
        "id": "polkadot",
        "name": "Polkadot",
        "project_url": "https://polkadot.network/",
        "docs_base_url": "https://docs.polkadot.com/"
    },

    "repository": {
        "host": "github",
        "org": "polkadot-developers",
        "repo": "polkadot-docs",
        "default_branch": "master",
        "docs_path": ".",
        "ai_artifacts_path": ".ai/pages"
    },

    "content": {
        "docs_dir": ".",
        "base_context_categories": ["Basics", "Reference"],
        "categories_order": [
            "Basics",
            "Smart Contracts",
            "Parachains",
            "dApps",
            "Networks",
            "Polkadot Protocol",
            "Infrastructure",
            "Tooling",
            "Reference"
        ],
        "exclusions": {
            "skip_basenames": [
                "README.md",
                "index.md",
                ".CONTRIBUTING.md",
                "pull-request-template.md",
                "cookie-policy.md",
                "LICENSE.md",
                "ai-chatbot-policy.md",
                "terms-of-use.md",
                "privacy-policy.md"
            ],
            "skip_paths": [".snippets", ".github", ".ai"]
        }
    },

    "outputs": {
        "public_root": "/.ai/",
        "files": {
            "llms_full": "llms-full.jsonl",
            "pages_dir": "pages"
        }
    }
}